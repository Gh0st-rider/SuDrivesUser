<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PermissionsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:id="@+id/rel_permission"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toBottomOf="@+id/view_const"
        >
        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:id="@+id/iv_permission"
            android:src="@drawable/ic_shield"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/textPermission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_11sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:fontFamily="@font/montserrat_regular"
            android:text="This App need the following permissions please allow to go forward: \n \n
1. Location: To get your precise location to provide driver to reach with accuracy. \n\n
2. External Storage: To help user able to upload images. \n\n
3. Contacts: To help you call the driver and communicate with them. \n \n
4. Telephone: To give better experience from tap you can call." />

        <Button
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/allow_permission"
            android:layout_below="@+id/textPermission"
            android:text="Allow Permission"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:foreground="?selectableItemBackground"
            android:textSize="@dimen/_10sdp"
            android:textAllCaps="false"
            android:fontFamily="@font/montserrat_semibold"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/_30sdp"
            android:textColor="@color/colorWhite"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>