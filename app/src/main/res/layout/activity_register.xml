<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/rlMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_registration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_180sdp"
                        android:background="@color/colorPrimaryDark">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:id="@+id/card_icon_login"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardUseCompatPadding="true">


                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/app_logo" />

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/montserrat_semibold"
                            android:text="Be our user and enjoy rides and other benefits."
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_10sdp" />

                    </RelativeLayout>
                    <androidx.cardview.widget.CardView
                        app:cardUseCompatPadding="true"
                        app:cardCornerRadius="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@color/colorWhite">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:layout_marginTop="@dimen/margin_10"
                            android:layout_marginRight="@dimen/margin_15"
                            android:layout_marginBottom="@dimen/margin_10"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_marginTop="@dimen/margin_10"
                                android:orientation="horizontal">

                                <!--  <ImageView
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:padding="@dimen/margin_2"
                                      android:src="@mipmap/flag" />-->
                                <TextView
                                    android:layout_width="@dimen/_35sdp"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="+91- "
                                    android:textColor="@color/colorBlack"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="bold" />

                                <View
                                    android:layout_width="@dimen/_1sdp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:layout_marginBottom="@dimen/_2sdp"
                                    android:background="@color/colorGrayView" />

                                <TextView
                                    android:id="@+id/tv_mobile_no"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:gravity="center_vertical"
                                    android:maxLength="10"
                                    android:maxLines="1"
                                    android:paddingStart="@dimen/_10sdp"
                                    android:paddingEnd="@dimen/_5sdp"
                                    android:text="@string/mobile_no"
                                    android:textColor="@color/colorGrayLight"
                                    android:textStyle="normal" />

                                <TextView
                                    android:id="@+id/tv_change"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="center_vertical"
                                    android:text="@string/change"
                                    android:textSize="@dimen/_10sdp"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="bold"
                                    android:visibility="visible" />

                            </LinearLayout>

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/app_separator"
                                android:background="@color/colorGrayView" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:id="@+id/ll_FirstName"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/margin_5">

                                        <ImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:padding="@dimen/_5sdp"
                                            android:src="@drawable/user_24dp" />

                                        <EditText
                                            android:id="@+id/et_first_name"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/transparent"
                                            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="center_vertical|start"
                                            android:hint="@string/full_name"
                                            android:inputType="textCapSentences"
                                            android:maxLength="50"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:textColor="@color/colorGrayDark"
                                            android:textColorHint="@color/colorGrayLight"
                                            android:textSize="@dimen/_10sdp" />

                                    </LinearLayout>


                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/app_separator"
                                        android:layout_below="@+id/ll_FirstName"
                                        android:background="@color/colorGrayView" />
                                </RelativeLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:id="@+id/ll_email"
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/_35sdp"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal"
                                        android:padding="@dimen/margin_5">

                                        <ImageView
                                            android:layout_width="@dimen/_35sdp"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center_vertical"
                                            android:padding="@dimen/_5sdp"
                                            android:src="@drawable/email_24dp" />

                                        <EditText
                                            android:id="@+id/et_email_id"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@android:color/transparent"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:gravity="center_vertical|start"
                                            android:hint="@string/email"
                                            android:inputType="textEmailAddress"
                                            android:maxLength="50"
                                            android:maxLines="1"
                                            android:singleLine="true"
                                            android:textColor="@color/colorGrayDark"
                                            android:textColorHint="@color/colorGrayLight"
                                            android:textSize="@dimen/_10sdp" />

                                    </LinearLayout>


                                    <View
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/app_separator"
                                        android:layout_below="@+id/ll_email"
                                        android:background="@color/colorGrayView" />
                                </RelativeLayout>


                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_30"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_10"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="1">

                                <Spinner
                                    android:id="@+id/spinnerUsageType"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_30" />


                                <ImageView
                                    android:id="@+id/ivDropDown"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:padding="@dimen/margin_8"
                                    android:src="@mipmap/ic_launcher"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/app_separator"
                                android:layout_marginTop="@dimen/margin_5"
                                android:background="@color/colorGrayView"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_30"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_10"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <Spinner
                                    android:id="@+id/spinnerState"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_30" />


                                <ImageView
                                    android:id="@+id/ivStateDropDown"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:padding="@dimen/margin_8"
                                    android:src="@mipmap/ic_launcher"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/app_separator"
                                android:layout_marginTop="@dimen/margin_5"
                                android:background="@color/colorGrayView" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/margin_30"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/margin_10"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <Spinner
                                    android:id="@+id/spinnerCity"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_30">

                                </Spinner>


                                <ImageView
                                    android:id="@+id/ivCityDropDown"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:padding="@dimen/margin_8"
                                    android:src="@mipmap/ic_launcher"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/app_separator"
                                android:layout_marginTop="@dimen/margin_5"
                                android:background="@color/colorGrayView" />

                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center_vertical|center"
                                android:text="@string/gender"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="@dimen/_12sdp" />

                            <RadioGroup
                                android:id="@+id/radiogroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rb_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="@string/male"
                                    android:textSize="@dimen/text_14" />

                                <RadioButton
                                    android:id="@+id/rb_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="@string/female"
                                    android:textSize="@dimen/text_14" />

                                <RadioButton
                                    android:id="@+id/rb_other"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="@string/other"
                                    android:textSize="@dimen/text_14" />

                            </RadioGroup>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/app_separator"
                                android:layout_marginTop="@dimen/margin_5"
                                android:background="@color/colorGrayView" />

                            <TextView
                                android:id="@+id/tvHavePromo"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/margin_5"
                                android:layout_marginBottom="@dimen/margin_5"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:paddingTop="@dimen/margin_5"
                                android:paddingBottom="@dimen/margin_5"
                                android:text="@string/have_a_referral_code"
                                android:textColor="@color/colorPrimary"
                                android:visibility="visible" />

                            <LinearLayout
                                android:id="@+id/llpromocode"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/margin_30"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_gravity="center_vertical"
                                        android:src="@drawable/coupon_24dp" />

                                    <EditText
                                        android:id="@+id/et_promocode"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:background="@android:color/transparent"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:gravity="center_vertical|left"
                                        android:hint="@string/referral_code"
                                        android:inputType="text"
                                        android:maxLines="1"
                                        android:paddingRight="2dp"
                                        android:singleLine="true"
                                        android:textColor="@color/colorGrayDark"
                                        android:textColorHint="@color/colorGrayLight" />
                                </LinearLayout>

                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/app_separator"
                                android:layout_marginTop="@dimen/margin_5"
                                android:background="@color/colorGrayView" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_10sdp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <CheckBox
                                    android:id="@+id/checkboxTermsNPrivacy"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>


                                  <!--  <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_marginTop="@dimen/_2sdp"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:text="@string/click_to_read"
                                        android:textColor="@color/colorPrimary" />
-->

                                    <TextView
                                        android:id="@+id/tv_by_logging_in_you_are_agreeing_to_our"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_gravity="center_vertical"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text="@string/by_logging_in_you_are_agreed_to_our"
                                        android:textColor="@color/colorGrayLight" />


                                </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

        <include
            android:id="@+id/error_layout"
            layout="@layout/error_layout" />

        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:textSize="@dimen/_12sdp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@string/register"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite" />
    </RelativeLayout>

</layout>


