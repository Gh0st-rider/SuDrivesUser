<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <!--  <ImageView
            android:id="@+id/ivCross"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_5"
            android:src="@drawable/permission_24dp"
            app:tint="@color/colorAccent" />-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/montserrat_semibold"
            android:id="@+id/coupon_title"
            android:gravity="center"
            android:text="Available Soon !"
            android:textColor="@color/colorGrayDark"
            android:textSize="@dimen/_12sdp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/montserrat_regular"
        android:id="@+id/coupon_description"
        android:gravity="center"
        android:text="Sorry ! this service is not available in your city, \nwe will update you soon."
        android:textColor="@color/colorGrayDark"
        android:textSize="@dimen/_10sdp" />



    <Button
        android:id="@+id/btn_allow_permission"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_35sdp"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/button_shap"
        android:text="Done"
        android:layout_marginBottom="@dimen/_20sdp"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_12sdp" />

    </LinearLayout>

</LinearLayout>