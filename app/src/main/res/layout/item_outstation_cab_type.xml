<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:id="@+id/rlCabType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/margin_10">


        <ImageView
            android:id="@+id/iv_cabType"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/margin_10"
            android:layout_marginRight="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_10"
            android:src="@drawable/car_placeholder" />

        <LinearLayout
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_cabType"
            android:layout_toEndOf="@+id/iv_cabType"
            android:layout_toRightOf="@+id/iv_cabType"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_cabType"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_5"
                android:paddingRight="@dimen/margin_10"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_10sdp"
                android:text="Micro"
                android:textColor="@color/colorGrayLight"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tv_cabAmount"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="@dimen/_10sdp"
                android:layout_width="0dp"
                android:layout_weight="0.45"
                android:gravity="center_vertical|end"
                android:paddingLeft="@dimen/margin_5"
                android:singleLine="true"
                android:text="200"
                android:textColor="@color/colorGrayDark"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/iv_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_weight="0.05"
                android:padding="@dimen/margin_3"
                android:src="@drawable/arrow_right_black_24dp"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:layout_height="wrap_content"
            android:id="@+id/tv_cabTypeDes"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="@dimen/_10sdp"
            android:layout_width="wrap_content"
            android:layout_below="@+id/rlTop"
            android:layout_toEndOf="@+id/iv_cabType"
            android:layout_toRightOf="@+id/iv_cabType"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_5"
            android:singleLine="true"
            android:text="Maruti Alto"
            android:textColor="@color/colorGrayLight"
            android:textStyle="normal" />


    </RelativeLayout>
</layout>