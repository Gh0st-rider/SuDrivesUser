<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvpromotions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:padding="@dimen/padding_5"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="@dimen/cardradius_5"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/llData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/ivptruck"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="@dimen/text_5"
                        android:paddingRight="@dimen/text_5"
                        android:src="@mipmap/ic_launcher" />

                    <TextView
                        android:id="@+id/tvpRide"
                        android:fontFamily="@font/montserrat_regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivptruck"
                        android:gravity="center"
                        android:text="@string/rides"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_14"
                        android:visibility="gone" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_marginTop="@dimen/margin_15"
                    android:layout_weight="0.75"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingRight="@dimen/padding_5">

                    <TextView
                        android:id="@+id/tvptitle"
                        android:fontFamily="@font/montserrat_semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="sn"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/tvpValidity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_7"
                        android:gravity="start"
                        android:fontFamily="@font/montserrat_regular"
                        android:paddingBottom="@dimen/margin_3"
                        android:text="@string/lorem_ipsum_dolor_sit_amet_consectetur_adipiscing_elit_cras_sit_amet_elementum_lectus_cras_pellentesque_mi_sapien_sit_amet_tristique_turpis_aliquet_sed"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/tvpTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_1"
                        android:layout_marginTop="@dimen/margin_1"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/margin_3"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/can_be_used"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/tvptncapplied"
                        android:fontFamily="@font/montserrat_regular"
                        android:textSize="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:paddingBottom="@dimen/margin_10"
                        android:paddingRight="@dimen/margin_5"
                        android:paddingTop="@dimen/margin_5"
                        android:text="@string/tncapplied"
                        android:textColor="@color/colorGreen" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>