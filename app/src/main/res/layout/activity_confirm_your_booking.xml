<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="@color/bg_color"
        android:fitsSystemWindows="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <include
                android:id="@+id/tool_bar"
                layout="@layout/tool_bar" />

            <ScrollView
                android:id="@+id/sbConfirmYourBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tool_bar"
                android:scrollbars="none">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/rl_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_trip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardUseCompatPadding="true"
                            android:background="@color/colorWhite"
                            app:cardBackgroundColor="@color/colorWhite">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_10"
                                android:layout_marginLeft="@dimen/text_10"
                                android:layout_marginRight="@dimen/text_10"
                                android:layout_marginTop="@dimen/margin_10"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="@dimen/_35sdp"
                                        android:layout_height="@dimen/_35sdp"
                                        android:src="@drawable/car_placeholder"/>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/margin_10"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_VehicleName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginTop="@dimen/text_5"
                                            android:gravity="start"
                                            android:textSize="@dimen/_10sdp"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:text="@string/vehical_name"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tv_VehicleDetail"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:textSize="@dimen/_10sdp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginTop="@dimen/text_5"
                                            android:gravity="start"
                                            android:text="@string/vehicle_details"
                                            android:textColor="@color/colorGrayDark"
                                            android:textStyle="normal" />


                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/lnr_booking_details_location"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_20"
                                    android:orientation="horizontal">


                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="@dimen/margin_65"
                                        android:orientation="vertical"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center">


                                        <androidx.cardview.widget.CardView
                                            android:layout_width="@dimen/_8sdp"
                                            android:layout_height="@dimen/_8sdp"
                                            app:cardCornerRadius="@dimen/_4sdp"
                                            app:cardBackgroundColor="@color/colorGreen"
                                            app:cardUseCompatPadding="false"
                                            app:cardElevation="0dp"/>


                                        <View
                                            android:layout_width="1dp"
                                            android:layout_height="@dimen/_20sdp"
                                            android:layout_marginTop="@dimen/_2sdp"
                                            android:layout_marginBottom="@dimen/_2sdp"
                                            android:layout_gravity="center_horizontal"
                                            android:background="@color/colorGrayDark"/>


                                        <androidx.cardview.widget.CardView
                                            android:layout_width="@dimen/_8sdp"
                                            android:layout_height="@dimen/_8sdp"
                                            app:cardCornerRadius="@dimen/_4sdp"
                                            app:cardBackgroundColor="@color/colorRed"
                                            app:cardUseCompatPadding="false"
                                            app:cardElevation="0dp"/>


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tv_originTrip"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:text="@string/enter_origin"
                                            android:textSize="@dimen/_10sdp"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:textColor="@color/colorGrayDark"
                                            android:textStyle="normal" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="@dimen/app_separator"
                                            android:background="@color/colorGrayView"
                                            android:layout_marginTop="@dimen/_5sdp"
                                            android:layout_marginBottom="@dimen/_5sdp"
                                            android:visibility="invisible" />

                                        <TextView
                                            android:id="@+id/tv_destinationTrip"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:singleLine="true"
                                            android:textSize="@dimen/_10sdp"
                                            android:fontFamily="@font/montserrat_regular"
                                            android:text="@string/enter_destination"
                                            android:textColor="@color/colorGrayDark"
                                            android:textStyle="normal" />


                                    </LinearLayout>
                                </LinearLayout>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_5"
                                    android:layout_marginRight="@dimen/margin_5"
                                    android:layout_marginTop="@dimen/margin_10"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/line" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/padding_5"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/tv_LeaveOn"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_weight=".5"
                                        android:gravity="start"
                                        android:textSize="@dimen/_12sdp"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:text="@string/leave_on"
                                        android:textColor="@color/colorGrayDark"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/tv_LeaveOnVal"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_weight=".5"
                                        android:gravity="end"
                                        android:paddingRight="@dimen/margin_5"
                                        android:text="@string/date"
                                        android:textColor="@color/colorBlack"
                                        android:textStyle="normal" />


                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/ll_Returnby"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/padding_5"
                                    android:visibility="visible"
                                    android:weightSum="1">

                                    <TextView
                                        android:id="@+id/tv_Returnby"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="start"
                                        android:layout_weight=".5"
                                        android:gravity="start"
                                        android:text="@string/return_by"
                                        android:textColor="@color/colorGrayDark"
                                        android:textStyle="normal" />

                                    <TextView
                                        android:id="@+id/tv_ReturnbyVal"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="end"
                                        android:layout_weight=".5"
                                        android:gravity="end"
                                        android:paddingRight="@dimen/margin_5"
                                        android:text="@string/date"
                                        android:textColor="@color/colorBlack"
                                        android:textStyle="normal" />


                                </LinearLayout>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/ll_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rl_first"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            app:cardUseCompatPadding="true"
                            android:layout_marginTop="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/colorWhite">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvTripDistance"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:textSize="@dimen/_12sdp"
                                    android:text="@string/one_way_trip_of_about"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="normal" />

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/app_separator"
                                    android:layout_marginBottom="@dimen/margin_5"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:background="@color/colorGrayView" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="@dimen/margin_10">

                                    <TextView
                                        android:id="@+id/tv_Estimated"
                                        android:fontFamily="@font/montserrat_regular"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:paddingBottom="@dimen/margin_3"
                                        android:paddingLeft="@dimen/margin_5"
                                        android:paddingRight="@dimen/margin_5"
                                        android:singleLine="false"
                                        android:text="@string/Estimated_fare"
                                        android:textColor="@color/colorBlack" />

                                    <TextView
                                        android:id="@+id/tv_EstimatedAmount"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:gravity="center"
                                        android:fontFamily="@font/montserrat_semibold"
                                        android:paddingBottom="@dimen/margin_3"
                                        android:singleLine="true"
                                        android:text="@string/amount"
                                        android:textColor="@color/colorGreen"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/app_separator"
                                    android:layout_marginBottom="@dimen/margin_5"
                                    android:layout_marginTop="@dimen/margin_5"
                                    android:background="@color/colorGrayView" />


                                <TextView
                                    android:id="@+id/tvFareDetails"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginBottom="@dimen/margin_5"
                                    android:gravity="center"
                                    android:padding="@dimen/padding_5"
                                    android:singleLine="true"
                                    android:text="@string/see_fare_details"
                                    android:textColor="@color/colorBlack"
                                    android:textStyle="normal" />


                                <LinearLayout
                                    android:id="@+id/ll_FareDetails"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:animateLayoutChanges="true"
                                    android:orientation="vertical"
                                    android:visibility="gone">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/app_separator"
                                        android:background="@color/colorGrayView" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/margin_5"
                                        android:layout_marginLeft="@dimen/margin_15"
                                        android:layout_marginRight="@dimen/margin_15"
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal"
                                            android:weightSum="1">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight=".5"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tvBaseFare"
                                                    android:layout_height="wrap_content"
                                                    android:layout_width="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="start"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:fontFamily="@font/montserrat_regular"
                                                    android:text="@string/base_fare"
                                                    android:textColor="@color/colorGrayDark"
                                                    android:textStyle="normal" />

                                                <TextView
                                                    android:id="@+id/tvDistance"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/montserrat_regular"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="start"
                                                    android:text="@string/total_distance"
                                                    android:textColor="@color/colorGrayLight"
                                                    android:textStyle="normal" />

                                            </LinearLayout>

                                            <TextView
                                                android:id="@+id/tvBaseFareAmount"
                                                android:layout_height="wrap_content"
                                                android:layout_width="0dp"
                                                android:layout_marginTop="@dimen/text_5"
                                                android:layout_weight=".5"
                                                android:gravity="end"
                                                android:fontFamily="@font/montserrat_regular"
                                                android:textSize="@dimen/_10sdp"
                                                android:text="@string/amount"
                                                android:textColor="@color/colorBlack"
                                                android:textStyle="normal" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="@dimen/margin_10"
                                            android:layout_marginTop="@dimen/margin_10"
                                            android:orientation="horizontal"
                                            android:weightSum="1">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight=".5"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tvTaxesAndFees"
                                                    android:layout_height="wrap_content"
                                                    android:layout_width="wrap_content"
                                                    android:fontFamily="@font/montserrat_semibold"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="start"
                                                    android:text="@string/taxes_fees"
                                                    android:textColor="@color/colorBlack"
                                                    android:textStyle="normal" />

                                                <TextView
                                                    android:id="@+id/tvNightCharges"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="start"
                                                    android:fontFamily="@font/montserrat_regular"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:text="@string/night_charges"
                                                    android:textColor="@color/colorGrayLight"
                                                    android:textStyle="normal" />

                                                <TextView
                                                    android:id="@+id/tvCancelCharges"
                                                    android:layout_height="wrap_content"
                                                    android:layout_width="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="start"
                                                    android:fontFamily="@font/montserrat_regular"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:text="@string/cancellation_charges"
                                                    android:textColor="@color/colorGrayLight"
                                                    android:textStyle="normal" />

                                                <TextView
                                                    android:id="@+id/tvTaxes"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="start"
                                                    android:fontFamily="@font/montserrat_regular"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:text="@string/taxes"
                                                    android:textColor="@color/colorGrayLight"
                                                    android:textStyle="normal" />

                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_weight=".5"
                                                android:orientation="vertical">

                                                <TextView
                                                    android:id="@+id/tvTaxesAndFeesVal"
                                                   android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:fontFamily="@font/montserrat_regular"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="end"
                                                    android:text="@string/amount"
                                                    android:textColor="@color/colorPrimaryDark"
                                                    android:textStyle="normal" />

                                                <TextView
                                                    android:id="@+id/tvNightChargesVal"
                                                    android:fontFamily="@font/montserrat_regular"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_width="match_parent"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="end"
                                                    android:text="@string/amount"
                                                    android:textColor="@color/colorGrayDark"
                                                    android:textStyle="normal" />

                                                <TextView
                                                    android:id="@+id/tvCancelChargesVal"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:fontFamily="@font/montserrat_regular"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="end"
                                                    android:text="@string/amount"
                                                    android:textColor="@color/colorGrayDark"
                                                    android:textStyle="normal" />

                                                <TextView
                                                    android:id="@+id/tvTaxesVal"
                                                    android:layout_height="wrap_content"
                                                    android:layout_width="match_parent"
                                                    android:fontFamily="@font/montserrat_regular"
                                                    android:textSize="@dimen/_10sdp"
                                                    android:layout_gravity="center_vertical"
                                                    android:layout_marginTop="@dimen/text_5"
                                                    android:gravity="end"
                                                    android:text="@string/amount"
                                                    android:textColor="@color/colorGrayDark"
                                                    android:textStyle="normal" />
                                            </LinearLayout>

                                        </LinearLayout>

                                    </LinearLayout>


                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/app_separator"
                                        android:background="@color/colorGrayView" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="@dimen/margin_12"
                                        android:layout_marginLeft="@dimen/margin_15"
                                        android:layout_marginRight="@dimen/margin_15"
                                        android:layout_marginTop="@dimen/margin_12"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <TextView
                                            android:id="@+id/tvEstimateFare"
                                            android:fontFamily="@font/montserrat_semibold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="start"
                                            android:layout_weight=".5"
                                            android:gravity="start"
                                            android:text="@string/estimated_fare"
                                            android:textColor="@color/colorBlack"
                                            android:textStyle="normal" />

                                        <TextView
                                            android:id="@+id/tvEstimateFareAmount"
                                            android:fontFamily="@font/montserrat_semibold"
                                            android:textSize="@dimen/_12sdp"
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="end"
                                            android:layout_weight=".5"
                                            android:gravity="end"
                                            android:text="@string/amount"
                                            android:textColor="@color/colorPrimaryDark"
                                            android:textStyle="normal" />
                                    </LinearLayout>


                                </LinearLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ll_payment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_second"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/padding_10"
                        android:paddingLeft="@dimen/margin_30"
                        android:paddingRight="@dimen/margin_25"
                        android:paddingTop="@dimen/padding_10">

                        <TextView
                            android:id="@+id/tvPaymentOption"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/payment_options"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_marginLeft="@dimen/margin_5"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="@dimen/_12sdp" />
                        <RelativeLayout
                            android:id="@+id/rlsourceLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_15"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <include
                                android:id="@+id/layoutPaymentType"
                                layout="@layout/layout_confirm_pickup">

                            </include>
                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:id="@+id/radiogroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_5"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/rbOnline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="@string/card"
                                    android:textColor="@color/colorGrayDark"
                                    android:textSize="@dimen/text_14" />

                                <RadioButton
                                    android:id="@+id/rbCash"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:text="@string/cash"
                                    android:textColor="@color/colorGrayDark"
                                    android:textSize="@dimen/text_14" />

                                <RadioButton
                                    android:id="@+id/rbWallet"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margin_10"
                                    android:text="@string/wallet"
                                    android:textColor="@color/colorGrayDark"
                                    android:textSize="@dimen/text_14" />

                            </RadioGroup>
                        </LinearLayout>


                        <Button
                            android:id="@+id/btnConfirmAndBook"
