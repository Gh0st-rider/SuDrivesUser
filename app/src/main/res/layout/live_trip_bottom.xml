<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_bottom_call_driver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@color/colorWhite"
            android:visibility="visible"
            app:cardBackgroundColor="@color/colorWhite">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


            <TextView
                android:id="@+id/tv_ride"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                android:fontFamily="@font/montserrat_semibold"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/ride_accepted"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/text_14" />


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_separator"
                android:layout_marginLeft="@dimen/margin_25"
                android:layout_marginTop="@dimen/margin_3"
                android:layout_marginRight="@dimen/margin_25"
                android:background="@color/colorGrayView" />


            <LinearLayout
                android:id="@+id/ll_trip_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_10"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/margin_10"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_15"
                            android:orientation="vertical">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <ImageView
                                    android:id="@+id/iv_vehicle_img"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center"
                                    android:gravity="center_vertical|center"
                                    android:src="@drawable/car_placeholder" />


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_driver_img"
                                    android:layout_width="@dimen/_50sdp"
                                    android:layout_height="@dimen/_50sdp"
                                    android:layout_gravity="start"
                                    android:layout_marginTop="@dimen/_30sdp"
                                    android:gravity="center_vertical|center"
                                    android:src="@drawable/profile_placeholder" />

                            </FrameLayout>


                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_vehicletype"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="@string/vehical_name"
                            android:textAllCaps="false"
                            android:textColor="@color/colorGrayLight"
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/tv_vehicleNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center"
                            android:text="@string/vehical_num"
                            android:textAllCaps="false"
                            android:textColor="@color/colorGrayDark"
                            android:textSize="@dimen/_10sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_5"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tvOtpT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:singleLine="true"
                                android:text="@string/otp"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="@dimen/text_14" />

                            <TextView
                                android:id="@+id/tvOtp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:gravity="center"
                                android:text="1235"
                                android:textColor="@color/colorRed"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_bookingId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="#F0F0F0"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center_vertical|center"
                    android:inputType="text"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="TRIP ID - "
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_14"
                    android:visibility="gone" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/bg_color"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:fontFamily="@font/montserrat_regular"
                                android:text="@string/name"
                                android:textAllCaps="false"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="@dimen/_10sdp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp">

                                <TextView
                                    android:id="@+id/tv_rating_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/montserrat_semibold"
                                    android:gravity="start"
                                    android:text=""
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorGrayDark"
                                    android:textSize="@dimen/_10sdp"
                                    android:textStyle="normal" />

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:isIndicator="true"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/_2sdp"
                                    android:numStars="5"
                                    android:stepSize="0.5"
                                    android:theme="@style/RatingBar" />

                            </LinearLayout>


                            </LinearLayout>


                            <ImageView
                                android:id="@+id/iv_chat_driver"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center"
                                android:background="@drawable/circle_yellow_filled_boarder"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_8sdp"
                                android:src="@drawable/chat_24dp" />


                            <ImageView
                                android:id="@+id/iv_call_driver"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:background="@drawable/circle_yellow_filled_boarder"
                                android:gravity="center_vertical"
                                android:padding="@dimen/_8sdp"
                                android:src="@drawable/call_24dp" />


                        </LinearLayout>

