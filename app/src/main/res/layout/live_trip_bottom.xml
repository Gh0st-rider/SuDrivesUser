                    <LinearLayout
                        android:id="@+id/ll_select_payment_live"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp">


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_selected_payment_live"
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/margin_5"
                                android:gravity="center"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/payment_method_24dp" />

                            <TextView
                                android:id="@+id/tv_selected_payment_live"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:fontFamily="@font/montserrat_regular"
                                android:gravity="center"
                                android:text="@string/setup_payment"
                                android:textColor="@color/colorGrayDark"
                                android:textSize="@dimen/_10sdp" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/montserrat_regular"
                            android:gravity="center"
                            android:text="@string/change"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_separator"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@color/colorGrayView" />
                    <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_estimated_cash"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"

                        android:background="@color/colorWhite"
                        android:fontFamily="@font/montserrat_regular"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/_10sdp"
                        android:paddingEnd="@dimen/_2sdp"
                        android:singleLine="true"
                        android:text="@string/estimated_cash_to_be_paid"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="@dimen/_10sdp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_30sdp"
                            android:id="@+id/tv_share"
                            android:text="Share ride"
                            android:background="@color/colorPrimaryDark"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/montserrat_semibold"
                            android:layout_alignParentEnd="true"
                            android:gravity="center"
                            android:paddingStart="@dimen/_10sdp"
                            android:paddingEnd="@dimen/_10sdp"
                            />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/app_separator"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:background="@color/colorGrayView" />


                    <Button
                        android:id="@+id/btn_cancel_booking"
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:background="@drawable/yellow_rec_round_border"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="Cancel Booking"
                        android:textAllCaps="false"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="@dimen/_12sdp" />


                </LinearLayout>

            </LinearLayout>
